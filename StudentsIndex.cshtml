@model List<Course>

<h2>Available Courses</h2>
@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Course ID</th>
            <th>Title</th>
            <th>Instructor</th>
            <th>Capacity</th>
            <th>Enroll</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseId</td>
                <td>@course.Title</td>
                <td>@course.Instructor</td>
                <td>@course.Capacity</td>
                <td>
                    @if (course.EnrolledStudents.Count < course.Capacity)
                    {
                        <a asp-action="Enroll" asp-route-courseId="@course.CourseId">Enroll</a>
                    }
                    else
                    {
                        <span class="text-muted">Course Full</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
