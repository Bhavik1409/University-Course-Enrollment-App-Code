@model List<Course>

<h2>Course Management</h2>
<p><a asp-action="AddCourse">Add New Course</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Course ID</th>
            <th>Title</th>
            <th>Instructor</th>
            <th>Capacity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseId</td>
                <td>@course.Title</td>
                <td>@course.Instructor</td>
                <td>@course.Capacity</td>
                <td>
                    <a asp-action="EditCourse" asp-route-courseId="@course.CourseId">Edit</a> |
                    <a asp-action="DeleteCourse" asp-route-courseId="@course.CourseId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
